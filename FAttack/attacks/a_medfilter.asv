function dsFun = a_medfilter(direction)
function aimg = downfn(image, factor)
    factor=factor^2;
    [width, height] = size(image);
    if mod(direction, 2) > 0 
        w = round(width-(factor*(width-1)));
    else
        w = width;
    end
    if (direction > 1)
        h = round(height-(factor*(height-1)));
    else
        h = height;
    end
    %fprintf("%d - %d\n", w, h);
    aimg = imresize(imresize(image, [h, w]),[height, width]);
end
dsFun = @downfn;
end


